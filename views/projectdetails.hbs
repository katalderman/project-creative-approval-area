<div id="wrapper">
<section id="intro" class="main">
<h2>Edit Project {{project.projectName}}</h2>
<form action="/projectdetails/{{ project._id }}" method="post">
  {{!-- <label for="owner">Project Owner</label>
  <input id="owner" type="text" name="editedowner" value="{{ user.owner }}">
  <br><br> --}}

<label for="owner">Project Owner</label>
<select name="editedowner">
	{{#each user}}
  	<option value="{{ this._id }}">{{ this.email }}</option>
	{{/each}}
</select>
<br><br>

<label for="client">Project Client</label>
<select name="editedclient">
	{{#each user}}
  	<option value="{{ this._id }}">{{ this.email }}</option>
	{{/each}}
</select>
<br><br>

  <label for="firstname">Project Name</label>
  <input id="firstname" type="text" name="editedprojectname" value="{{ project.projectName }}">
  <br><br>
  <label for="lastname">Project Message</label>
  <input id="lastname" type="text" name="editedprojectmessage" value="{{ project.projectMessage }}">
  <br><br>
  <label for="lastname">Project Image</label>
  <img src="{{project.imgPath}}">
  <br><br>
  <label for="isapproved">Approval Status</label>
  <input id="approvedStatus" type="radio" name="isApproved" value="APPROVED" checked>Approved (Limited Permissions)</br>
  <input id="unapprovedStatus" type="radio" name="isApproved" value="NOT APPROVED" >Not Approved (Full Permissions)</br>
  
  <br><br>

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button class="button big dark" type="submit">Save Changes</button>
</form>
</section>
</div>


